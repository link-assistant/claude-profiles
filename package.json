{
  "name": "@link-assistant/claude-profiles",
  "version": "1.2.3",
  "description": "Manage multiple Claude configuration profiles using GitHub Gists as secure cloud storage",
  "main": "claude-profiles.mjs",
  "bin": {
    "claude-profiles": "./claude-profiles.mjs"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "node --check claude-profiles.mjs",
    "changeset": "changeset",
    "changeset:version": "node scripts/changeset-version.mjs",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status --since=origin/main"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/link-assistant/claude-profiles.git"
  },
  "keywords": [
    "claude",
    "claude-ai",
    "claude-code",
    "profile",
    "backup",
    "restore",
    "configuration",
    "management",
    "cli",
    "github-gist",
    "cross-platform"
  ],
  "author": "Deep Assistant",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/link-assistant/claude-profiles/issues"
  },
  "homepage": "https://github.com/link-assistant/claude-profiles#readme",
  "files": [
    "claude-profiles.mjs",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7"
  }
}